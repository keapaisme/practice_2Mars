//汽車接口
interface Car{
//汽車名
String getName();
//获得汽車售价
int getPrice();
}

//BMW
class BMW implements Car{
public String getName(){
return "BMW";
}
public int getPrice(){
return 300000;
}
}

//奇瑞
class CherQQ implements Car{
public String getName(){
return "CherQQ";
}
public int getPrice(){
return 20000;
}
}

//汽車出售店
public class CarShop(
//售车收入
private int money =0;
//賣出一部车
public void sellCar(Car car){
 System.out.println("车型; "+ car.getName() + " 單价; " + car.getPrice());
 // 增加賣出车介的收入
 money += car.getPrice();
}

//售車总收入
public int getMoney(){
 return money;
}

public static void main(String[] args){
CarShop aShop = new CarShop();
//賣出BMW一台
aShop.sellCar(new BMW());
//賣出QQ一台
aShop.sellCar(new CheryQQ());
System.out.println("总收入 : "+aShop.getMoney());
}

}